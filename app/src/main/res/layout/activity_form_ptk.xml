<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.project.bbt.form_ptk">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include
                    layout="@layout/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@+id/flContent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:visibility="gone"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/biodata"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.033"
                android:text="nomor" />
            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/biodata"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.033"
                android:visibility="gone"
                android:text="tanggal" />


            <TextView
                android:id="@+id/approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:text="Approval PTK"
                android:textColor="#333"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/approval"
                app:layout_constraintVertical_bias="0.10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabatan PTK"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/jabatan"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="@font/segoeuil"
                        android:includeFontPadding="false"
                        android:longClickable="false"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analisa"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/analisa"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="@font/segoeuil"
                        android:includeFontPadding="false"
                        android:longClickable="false"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenaga Kerja "
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tenaga"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:fontFamily="@font/segoeuil"
                        android:includeFontPadding="false"
                        android:longClickable="false"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
                app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/quest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Apakah anda menyetujui pengajuan PTK tersebut ?"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/opsi"
                        android:layout_width="337.4649dp"
                        android:layout_height="59.0463dp"
                        android:layout_below="@+id/announcement"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/opsi_remake" />


                    <RadioGroup
                        android:id="@+id/option"
                        android:layout_width="245dp"
                        android:layout_height="29dp"
                        android:layout_alignStart="@+id/opsi"
                        android:layout_alignLeft="@+id/opsi"
                        android:layout_alignTop="@+id/opsi"
                        android:layout_alignEnd="@+id/opsi"
                        android:layout_alignRight="@+id/opsi"
                        android:layout_alignBottom="@+id/opsi"
                        android:layout_marginStart="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="14dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/diterima"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-6dp"
                            android:text="Approved"
                            android:textSize="13dp" />

                        <RadioButton
                            android:id="@+id/tidakterima"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="16dp"
                            android:text="Not Approved"
                            android:textSize="13dp" />
                    </RadioGroup>
                </RelativeLayout>

                <EditText
                    android:id="@+id/keterangantambahan"
                    android:layout_width="299dp"
                    android:layout_height="136dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="top|start"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/keterangan_tambahan_remake"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:scrollHorizontally="false"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/approve"
                android:layout_width="294dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@null"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/btn_ok"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
                app:layout_constraintStart_toStartOf="@+id/linearLayout5"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header_main"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>