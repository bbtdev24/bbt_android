<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.bbt.detail_daily">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="8dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/dailynBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ffffff"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:title="Realization Plan"
                app:titleTextColor="#212121" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/scrollIndicatorDown"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/linearbutton"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/note"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge"
                    app:cardCornerRadius="8dp"
                    android:elevation="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:padding="15dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/tanggalnomor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="48dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_edit_square" />

                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tanggal_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:text="Date Planner"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:textColor="#000000"
                                        android:text="Date Planner"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:backgroundTint="#EDF7FF"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:scaleType="fitXY"
                                android:text="Clear"
                                android:textAllCaps="false"
                                android:textColor="#0F4C81"
                                android:textStyle="bold"
                                app:icon="@drawable/mop"
                                app:iconTint="@color/blue" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/schedule"/>
                                <TextView
                                    android:id="@+id/jam"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/keterangan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:textSize="15dp"
                                android:textColor="#000000"
                                android:text=""/>

                            <LinearLayout
                                android:id="@+id/realisasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:src="@drawable/dotted"
                                    android:layerType="software" />

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/schedule"/>
                                    <TextView
                                        android:id="@+id/jam_realisasi"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>

                                <TextView
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:id="@+id/keterangan_realisasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textSize="15dp"
                                    android:textColor="#000000"
                                    android:text=""/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timesession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:src="@drawable/dotted"
                                android:layerType="software" />

                            <TextView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Session"
                                android:layout_marginTop="20dp"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                android:layout_below="@+id/username"
                                >

                                <AutoCompleteTextView
                                    android:id="@+id/status"
                                    android:paddingLeft="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Status Realisasi"
                                    android:focusable="false"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:textSize="16dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/kategori"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                android:layout_below="@+id/username"
                                >

                                <EditText
                                    android:id="@+id/kategori_kegiatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Kategori Kegiatan"
                                    android:focusable="false"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:textSize="16dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/start"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                android:layout_below="@+id/username"
                                >

                                <EditText
                                    android:id="@+id/jam_mulai"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Start Time"
                                    android:focusable="false"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:textSize="16dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/finish"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:endIconMode="clear_text"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                android:layout_below="@+id/username"
                                >

                                <AutoCompleteTextView
                                    android:id="@+id/durasijam"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Durasi Jam"
                                    android:paddingLeft="15dp"
                                    android:focusable="false"
                                    android:longClickable="false"
                                    android:singleLine="true"
                                    android:textSize="16dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/uraian"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="20dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                app:hintTextColor="#0F4C81"
                                android:layout_below="@+id/pilihan">

                                <EditText
                                    android:id="@+id/catatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="92dp"
                                    android:gravity="top"
                                    android:hint="Uraian Pekerjaan"
                                    android:paddingLeft="10dp"
                                    android:textSize="16dp"
                                    tools:layout_editor_absoluteX="41dp"
                                    tools:layout_editor_absoluteY="442dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/alasan"
                                android:visibility="gone"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                app:hintTextColor="#0F4C81"
                                android:layout_below="@+id/pilihan">

                                <EditText
                                    android:id="@+id/editalasan"
                                    android:layout_width="match_parent"
                                    android:layout_height="92dp"
                                    android:gravity="top"
                                    android:hint="Alasan"
                                    android:paddingLeft="10dp"
                                    android:textSize="16dp"
                                    tools:layout_editor_absoluteX="41dp"
                                    tools:layout_editor_absoluteY="442dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/pengganti"
                                android:visibility="gone"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="20dp"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:boxStrokeColor="#0F4C81"
                                app:hintTextColor="#0F4C81"
                                android:layout_below="@+id/pilihan">

                                <EditText
                                    android:id="@+id/pengganti_pekerjaan"
                                    android:layout_width="match_parent"
                                    android:layout_height="92dp"
                                    android:gravity="top"
                                    android:hint="Aktivitas Pengganti"
                                    android:paddingLeft="10dp"
                                    android:textSize="16dp"
                                    tools:layout_editor_absoluteX="41dp"
                                    tools:layout_editor_absoluteY="442dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>
        </ScrollView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/linearbutton"
            android:gravity="bottom"
            android:background="#ffffff"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardElevation="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:visibility="visible"
                android:background="#ffffff"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/batal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_corner"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textColor="#0F4C81"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/squared_corner"
                    android:backgroundTint="#0F4C81"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header_main"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>