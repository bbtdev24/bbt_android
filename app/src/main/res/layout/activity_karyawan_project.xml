<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.eis2.com.example.bbt.karyawan_project">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/jamsekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Jam"
                android:visibility="invisible"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/karyawanproject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#333"
                android:textStyle="bold"
                android:text = "Karyawan Project"
                />

            <EditText
                android:id="@+id/tanggalawal"
                android:layout_width="337.4649dp"
                android:layout_height="59.0463dp"
                android:layout_below="@+id/karyawanproject"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/mulai_tanggal"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="false"
                android:hint="tanggal"
                android:inputType="datetime"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/tanggalakhir"
                android:layout_width="337.4649dp"
                android:layout_height="59.0463dp"
                android:layout_below="@+id/tanggalawal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/sampai_tanggal"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="false"
                android:hint="tanggal"
                android:inputType="datetime"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/karyawan"
                android:layout_width="337.4649dp"
                android:layout_height="59.0463dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/txt_karyawan"
                android:layout_below="@id/tanggalakhir"
                android:longClickable="false"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:focusable="false"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:id="@+id/depo"
                android:layout_width="337.4649dp"
                android:layout_height="59.0463dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/pilih_depo"
                android:layout_below="@id/karyawan"
                android:clickable="true"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:longClickable="false"
                android:layout_centerHorizontal="true"
                />

            <ListView
                android:id="@+id/list"
                android:layout_width="337.5dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:nestedScrollingEnabled="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/depo" />

            <ImageButton
                android:id="@+id/pengajuan2"
                android:layout_width="337.5dp"
                android:layout_height="55.401dp"
                android:layout_below="@id/list"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/btn_pengajuan" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>