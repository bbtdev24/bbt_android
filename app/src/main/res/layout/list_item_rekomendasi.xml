<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#000000"
        android:text="nama"
        android:layout_marginLeft="4dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/noktp"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Nomor KTP              "
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua1"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/di_no_ktp"
            android:textColor="#000000"
            android:padding="5dp"
            android:textSize="10dp"
            android:text="noktp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tanggallahir"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="Tanggal Lahir"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua12"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dd_tanggal_lahir"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="tgllahir"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/posisi"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="Posisi  "
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua1212"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/di_posisi"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="posisi"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nilaicv"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="Nilai CV  "
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua12120"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/di_nilai_cv_calon_karyawan"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="nilai"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/validasi"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="Nilai Validitas  "
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua12130"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/di_nilai_validitas_calon_karyawan"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="nilai"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cv"
            android:textColor="#000000"
            android:padding="5dp"
            android:text="CV  "
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/titikdua9"
            android:textColor="#000000"
            android:padding="5dp"
            android:textStyle="bold"
            android:text=":"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/proses"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/btn_proses_kan"
            />
        <ImageButton
            android:id="@+id/unduh"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/btn_unduhlampiran"
            />
    </LinearLayout>


</LinearLayout>