<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="330dp"
        android:layout_margin="15dp"
        android:layout_height="500dp">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Anak"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                app:endIconMode="clear_text"
                android:layout_below="@+id/username"
                >

                <EditText
                    android:id="@+id/urutananak"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Anak Ke-"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                app:endIconMode="clear_text"
                android:layout_below="@+id/username"
                >

                <EditText
                    android:id="@+id/nama_lengkap_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Nama Lengkap"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                app:endIconMode="clear_text"
                android:layout_below="@+id/username"
                >

                <EditText
                    android:id="@+id/no_ktp_anak"
                    android:maxLength="16"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="No. KTP Keluarga"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                android:layout_below="@+id/username"
                >

                <EditText
                    android:id="@+id/tgl_lahir_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_gravity="center_horizontal"
                    android:hint="Tanggal Lahir"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                app:endIconMode="clear_text"
                android:layout_below="@+id/username"
                >

                <EditText
                    android:id="@+id/tempat_lahir_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Tempat Lahir"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="#0F4C81"
                android:layout_below="@+id/username"
                >

                <AutoCompleteTextView
                    android:id="@+id/golongan_darah_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_gravity="center_horizontal"
                    android:hint="Golongan Darah"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="#0F4C81"
                android:layout_below="@+id/username"
                >

                <AutoCompleteTextView
                    android:id="@+id/agama_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_gravity="center_horizontal"
                    android:hint="Agama"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="#0F4C81"
                android:layout_below="@+id/username"
                app:endIconMode="clear_text"
                >

                <EditText
                    android:id="@+id/suku_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:hint="Suku Keluarga"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Kewarganegaraan"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/wni_anak"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WNI"/>
                <RadioButton
                    android:id="@+id/wna_anak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:text="WNA"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="#0F4C81">

                <AutoCompleteTextView
                    android:id="@+id/pendidikanterakhir_anak"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:longClickable="false"
                    android:focusable="false"
                    android:layout_gravity="center_horizontal"
                    android:hint="Pendidikan Terakhir"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/linearbutton"
                android:gravity="center"
                android:background="#ffffff"
                android:padding="10dp"
                android:layout_marginTop="24dp"
                app:cardElevation="40dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:visibility="visible"
                    android:background="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:gravity="center"
                        android:visibility="visible"
                        android:background="#ffffff"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/batal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:strokeWidth="1dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:backgroundTint="#ffffff"
                            android:scaleType="fitXY"
                            app:strokeColor="#0F4C81"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            android:text="Batal"
                            android:textAllCaps="false"
                            android:textColor="#0F4C81"
                            android:textStyle="bold" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tambah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:strokeWidth="1dp"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="#0F4C81"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="fitXY"
                            android:text="Tambah"
                            android:textAllCaps="false"
                            android:textColor="#FFF"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>





</LinearLayout>