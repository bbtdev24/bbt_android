<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Realisasi"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By Status"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/pilihan"
        android:layout_width="wrap_content"
        app:singleSelection="true"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/chip_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="3dp"
            android:text="Semua"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/chip_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="3dp"
            android:text="Ya"/>
        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipBackgroundColor="@color/chip_background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStrokeColor="#E0E0E0"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="3dp"
            android:text="Tidak"/>
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/linearbutton"
        android:gravity="bottom"
        app:cardElevation="40dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tampilkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/squared_corner"
                android:backgroundTint="#0F4C81"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:text="Tampilkan"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>