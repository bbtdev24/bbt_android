<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.project.bbt.menu_getin_getout">

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- AppBar with Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/id_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                app:title="Check In/Check Out"
                app:titleTextColor="@color/green" />
        </com.google.android.material.appbar.AppBarLayout>


        <!-- Main Content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clipToPadding="false">

                    <!-- CardView for Time and Date -->

                    <!-- Rekap Absen Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardview_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="16dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E1E1E1"
                        app:strokeWidth="0.8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:visibility="gone"></RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Real-time Clock -->
                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07:50:00"
                                android:textColor="@color/black"
                                android:textSize="38sp"
                                android:textStyle="bold" />

                            <!-- Day, Date -->
                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sabtu, 21 Sep 2024"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <!-- Shift Info -->
                            <TextView
                                android:id="@+id/tv_shift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jadwal Shift : 08:00 - 17:00, 21 Sep 2024"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Icon -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" />

                            <!-- Text -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rekap Absen"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lihat detail rekap kehadiran Anda."
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Arrow Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/navigation" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardview_time"
                        android:clipToPadding="false"
                        android:orientation="vertical">

                        <!-- Check In/Check Out List -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Check In/Check Out"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Get In -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="16dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E1E1E1"
                            app:strokeWidth="0.8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingTop="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:id="@+id/tv_time_getin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/green"
                                    android:textSize="18sp"
                                    android:textStyle="bold"></TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_date_getin"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tanggal"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Get In"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/navigation" />
                                </LinearLayout>


                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <!-- Get Out -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="16dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E1E1E1"
                            app:strokeWidth="0.8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingTop="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:id="@+id/tv_time_getout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/green"
                                    android:textSize="18sp"
                                    android:textStyle="bold"></TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_date_getout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tanggal"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Get Out"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/navigation" />
                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:visibility="gone"
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="#E1E1E1"
                            app:strokeWidth="0.8dp">

                            <!-- Main Linear Layout -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <!-- Profile Section -->
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Profile Image -->
                                    <RelativeLayout
                                        android:id="@+id/relative_background_foto_user"
                                        android:layout_width="60dp"
                                        android:layout_height="80dp"
                                        android:layout_marginRight="16dp"
                                        android:background="@drawable/rounded_corner_background"
                                        android:gravity="center">

                                        <ImageView
                                            android:visibility="visible"
                                            android:id="@+id/icon_camera_foto_user"
                                            android:layout_width="38dp"
                                            android:layout_height="38dp"
                                            android:backgroundTint="#DE939393"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/user">
                                        </ImageView>

                                        <ImageView
                                            android:id="@+id/img_background_foto_user"
                                            android:layout_width="60dp"
                                            android:layout_height="80dp"
                                            android:adjustViewBounds="true"></ImageView>

                                    </RelativeLayout>


                                    <!-- Name and ID -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <!-- Name Text -->
                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nama User"
                                            android:textColor="@color/green"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <!-- ID Text -->
                                        <TextView
                                            android:id="@+id/tv_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="NIP"
                                            android:textColor="@color/black"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Jadwal Shift -->
                                <TextView
                                    android:id="@+id/tv_jadwal_shift"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:text="Jadwal Shift : 08:00 - 17:00, 21 Sep 2024"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:visibility="gone" />



                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.8dp"
                                    android:layout_marginTop="8dp"
                                    android:background="#E1E1E1"></View>

                                <!-- Longlat and Button Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Longlat:"
                                            android:textColor="@color/black"
                                            android:textSize="14sp" />

                                        <!-- Longlat Text -->
                                        <TextView
                                            android:id="@+id/tv_longlat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="-"
                                            android:textColor="@color/black"
                                            android:textSize="14sp" />
                                    </LinearLayout>


                                    <!-- Button -->
                                    <Button
                                        android:id="@+id/btn_lihat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/white"
                                        android:strokeColor="@color/green"
                                        android:text="Lihat"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <Button
                    android:id="@+id/bt_getin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_shape_for_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:text="CHECK IN"
                    android:textColor="@color/white" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
