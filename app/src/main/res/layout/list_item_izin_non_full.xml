<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/listItem"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tanggal"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tanggal Pengajuan"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/pengajuan"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No.Pengajuan"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/jenis"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jenis Izin"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/tanggalizin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="tanggal izin"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Keterangan"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/status1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/tanggalapproval1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="tanggal"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/feedback1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Feedback Atasan "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/status2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/tanggalapproval2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="tanggal"
        android:textColor="#000000" />
    <TextView
        android:visibility="gone"
        android:id="@+id/feedback2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Feedback Atasan 2"
        android:textColor="#000000" />

</LinearLayout>