<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tanggalnomor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checktanggal"
                        android:buttonTint="#0F4C81"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/draft_icon" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Daily Activity External"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tanggal_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text=""
                            android:textColor="#0A0A0A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:visibility="invisible"
                        android:buttonTint="#0F4C81"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_depo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#0A0A0A"/>
                        <TextView
                            android:id="@+id/text_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="#0A0A0A"/>

                        <TextView
                            android:id="@+id/text_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#0A0A0A"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="16dp"
                            android:text="Market Activity :"
                            android:textSize="10sp"
                            android:textColor="#616161"/>

                        <TextView
                            android:id="@+id/market_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#0A0A0A"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="16dp"
                            android:text="Competitor Activity :"
                            android:textSize="10sp"
                            android:textColor="#616161"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/keterangan_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Brand"
                                android:textColor="#0A0A0A"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="#0A0A0A"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_sku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="SKU"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>

                            <TextView
                                android:id="@+id/text_sku"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="#0A0A0A"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_harganormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Harga Beli Normal (Unit)"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                            <TextView
                                android:id="@+id/text_harga_normal"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_diskon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Diskon"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                            <TextView
                                android:id="@+id/text_diskon"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_cashback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Cashback"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                            <TextView
                                android:id="@+id/text_cashback"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_harganet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Harga Beli Net"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#C2C2C2"/>

                            <TextView
                                android:id="@+id/text_harga_net"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="#C2C2C2"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_hargajual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Harga Jual (Unit)"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0A0A0A"/>

                            <TextView
                                android:id="@+id/text_harga_jual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="#0A0A0A"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/relative_hargamargin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Margin"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#C2C2C2"/>

                            <TextView
                                android:id="@+id/text_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="#C2C2C2"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="16dp"
                            android:text="Feedback Outlet :"
                            android:textSize="10sp"
                            android:textColor="#616161"/>

                        <TextView
                            android:id="@+id/text_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#0A0A0A"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selesai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:cornerRadius="5dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:text="Selesaikan Kunjungan"
                            android:textAllCaps="false"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:theme="@style/abirStyle"
                            app:iconGravity="start" />











                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>




        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>